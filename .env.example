# Telegram Bot Token (get from @BotFather)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# OpenAI API Key (for GPT-4o-mini and Whisper)
OPENAI_API_KEY=your_openai_api_key_here

# Database URL (SQLite by default)
DATABASE_URL=sqlite+aiosqlite:///./data/expenses.db

# Allowed Telegram User IDs (comma-separated, for security)
ALLOWED_USER_IDS=123456789,987654321

# Default currency
DEFAULT_CURRENCY=MXN

# Timezone
TIMEZONE=America/Mexico_City

# Railway volume mount path (for persistent SQLite storage)
# Leave empty for local development, Railway sets this automatically
# RAILWAY_VOLUME_MOUNT_PATH=/data
